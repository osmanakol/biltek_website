<button type="button" class="btn btn-register" data-toggle="modal" data-target="#myModal1">
    Kayıt ol
</button>

<!--Modal Box -->
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    Kayıt Form</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <form id="form" role="form" action="#" method="post" class="register-form" name="myForm">
                    <fieldset style="display: block;">
                        <div class="form-group register-form-h5 register-form-group">
                            <h5>Ad-Soyad(*)</h5>
                            <i class="fas fa-user register-fa-lg-user fa-fw" aria-hidden="true"></i>
                            <label class="sr-only register-form-label" for="form-first-last-name">Ad-Soyad</label>

                            <input type="text" id="id_name" name="form-first-name" required placeholder="Ad-Soyad..."
                                class="form-first-last-name form-control input-error register-form-input"
                                id="form-first-last-name">
                        </div>
                        <div class="form-group register-form-h5 register-form-group">
                            <h5>E-Mail(*)</h5>
                            <i class="fas fa-envelope register-fa-lg-mail fa-fw" aria-hidden="true"></i>
                            <label class="emailBox register-form-label"></label>
                            <input type="email" id="email" required placeholder="Email..."
                                class="form-email form-control register-form-input" onkeydown="e_mail_validation()">
                        </div>
                        <div class="form-group register-form-h5 register-form-group">
                            <h5>Telefon</h5>
                            <i class="fas fa-phone-alt register-fa-lg-phone fa-fw" aria-hidden="true"></i>
                            <label class="sr-only register-form-label" for="form-phone">Telefon</label>

                            <input name="form-phone" type="text" onkeyup="phone_validate()"
                                pattern=[0-9]{3}-[0-9]{3}-[0-9]{4} id="id_phone" placeholder="XXX-XXX-XXXX"
                                class="form-phone form-control input-error register-form-input" id="form-phone">
                        </div>
                        <div class="form-group register-form-h5 register-form-group">

                            <h5>Okul(*)</h5>
                            <select class="register-form-select" name="okul" onchange="getDepartmentsById()" required
                                id="id_school">
                                <option value="" disabled selected hidden>Okulunuzu seçiniz...</option>
                                {{!-- <option value="ODTÜ ">ODTÜ</option>
                                        <option value="itü">İTÜ</option>
                                        <option value="aybü">AYBÜ</option>
                                        <option value="gazi">GAZİ</option> --}}
                            </select>
                        </div>
                        <div class="form-group register-form-h5 register-form-group">

                            <h5>Bölüm(*)</h5>
                            <select class="register-form-select" name="bölüm" required id="id_dep">
                                <option value="" disabled selected hidden>Bölümünüzü seçiniz...</option>
                                {{!-- <option value="ceng ">CENG</option>
                                        <option value="ieee">IEEE</option>
                                        <option value="civil">CIVENG</option>
                                        <option value="med">MEDICINE</option> --}}
                            </select>
                        </div>
                        <div class="modal-footer">
                            <a class="register-modal-footer-a" onclick=" submit_validation()">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                Kaydol
                            </a>

                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>